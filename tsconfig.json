{
  "compilerOptions": {
    "jsx": "react-jsx",          // ðŸ”‘ Permite TSX
    "jsxImportSource": "react",  // ðŸ”‘ Necesario para Astro+React
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
