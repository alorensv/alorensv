</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tabs = document.querySelectorAll('#tabs-bar button');
    const contents = {
      skills: document.getElementById('skills-content'),
      estudios: document.getElementById('estudios-content'),
    };
    tabs.forEach(tab => {
      tab.addEventListener('click', function () {
        tabs.forEach(t => t.classList.remove('bg-accent', 'text-primary'));
        tab.classList.add('bg-accent', 'text-primary');
        Object.values(contents).forEach(c => c.style.display = 'none');
        contents[tab.dataset.tab].style.display = '';
      });
    });
  });
</script>
